<% if current_user && @task %> 

  <button type="button" class="btn btn-outline-secondary me-2 mx-2" data-bs-toggle="modal" data-bs-target="#Modal<%= @task.id %>">+</button>
        
  <div class="modal fade" id="Modal<%= @task.id %>" tabindex="-1" aria-labelledby="ModalLabel<%= @task.id %>" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="ModalLabel<%= @task.id %>">Create task</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <%= form_with model: [current_user, @task] do |form| %>
                    <%= form.text_field :title, required: true, minlength: 1, maxlength: 150, class: "form-control mb-2" %>
                    <%= form.hidden_field :repeat, value: @repeat %>
                    <%= form.submit "Create" %>
                  <% end %>
              </div>
          </div>
      </div>
  </div>
<% end %>